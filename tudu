#!/usr/bin/env bash

list_file='list.tudu'

function print_usage {
  echo "$(basename "$0") [ --add | --delete | --list ]"
}

function add_item {
  echo "${list_item}" >> "${list_file}"
}

function create_list {
  touch "${list_file}"
}

function delete_list_item {
  sed -i '' "${1}d" "${list_file}"
}

function read_list {
  line_num=1
  while IFS='' read -r line; do
    echo "${line_num}. ${line}"
    line_num=$((line_num + 1))
  done < "${list_file}"
}


while [[ $# -gt 0 ]]
do

  key="$1"

  case $key in
    
    -a|--add)
      shift
      list_item="$*"
      add_item
      exit
    ;;
    
    -i|--init)
      create_list
      exit
    ;;
    
    -d|--delete)
      delete_list_item
      exit
    ;;
    
    -l|--list)
      read_list
      exit
    ;;
    
    *)
      echo "Unkown Usage"
      print_usage
      exit
    ;;

  esac

done
